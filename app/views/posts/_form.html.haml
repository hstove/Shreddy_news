= form_for @post do |f|
  -if @post.errors.any?
    #error
      %h1 sorry brah! #{pluralize(@post.errors.count, "Error")} prohibited this post from being saved.
      %ul next time:
      - @post.errors.full_messages.each do |msg|
        %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :url
    = f.text_field :url
  .actions
    = f.submit 'Save'
