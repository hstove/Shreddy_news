%table
  %colgroup.title
  %colgroup.edit
    %tr
      %th Title
      %th ID
      %th URL
      %th Score
      %th Votes
      %th Created At
      %th
      %th
  - @posts.each do |post|
    %tr.row
      %td= link_to post.title, post
      %td= post.id
      %td= post.url
      %td= post.score
      %td= votes_for(post)
      %td= time_ago_in_words(post.created_at)
      %td= link_to 'edit', edit_post_path(post)
      %td= link_to 'delete', post, :method => :delete
  