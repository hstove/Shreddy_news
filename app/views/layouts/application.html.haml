
  
%head
  %title= "Shreddy News - #{@title}"
  =stylesheet_link_tag "main", "application"
  =javascript_include_tag "application"
  :javascript
     var _gaq = _gaq || [];
    _gaq.push(['_setAccount', 'UA-26761755-1']);
    _gaq.push(['_trackPageview']);

    (function() {
      var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
      ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
      var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
    })();
%body.all
  #inner
    %table
      %colgroup.left
      %colgroup.two
      %colgroup.three
      %colgroup.last
      %thead
        %tr.main
          %th.h1= link_to "Shreddy News", posts_path
          %th= link_to "New Posts", new_index_path
          -unless user_signed_in?
            %th.invite= link_to "New Here?", page_path("new")
          -if user_signed_in?
            %th.username= "hello #{current_user.username} |"
            %th.sign= link_to 'sign out', destroy_user_session_path, :method => 'delete'
          -else  
            %th.sign= link_to 'sign in', new_user_session_path
            %th.sign= link_to 'sign up', new_user_registration_path
    =yield


