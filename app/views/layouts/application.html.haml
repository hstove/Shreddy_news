
  
%head
  =stylesheet_link_tag "main", "application"
  =javascript_include_tag "application"
%body.all
  #inner
    %table
      %colgroup.left
      %colgroup.two
      %colgroup.last
      %thead
        %tr.main
          %th.h1= link_to "Shreddy News", posts_path
          %th 
            %a{href: "#"} About
          -if user_signed_in?
            %th= current_user.email
            %th= link_to 'sign out', destroy_user_session_path, :method => 'delete'
          -else
            %th= link_to 'sign up', new_user_registration_path
            %th= link_to 'sign in', new_user_session_path
    =yield


